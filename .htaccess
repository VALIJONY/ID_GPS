RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.*)$ passenger_wsgi.py/$1 [QSA,L]

# Static files
<FilesMatch "\.(css|js|jpg|jpeg|png|gif|ico)$">
    Order allow,deny
    Allow from all
</FilesMatch>

# Media files
<FilesMatch "\.(pdf|doc|docx|xls|xlsx|zip|rar)$">
    Order allow,deny
    Allow from all
</FilesMatch>

# Allow Python files
<Files *.py>
    Order allow,deny
    Allow from all
</Files>